{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order ",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "totalPrice": {
      "type": "decimal"
    },
    "shippingPrice": {
      "type": "decimal"
    },
    "orderStatus": {
      "type": "enumeration",
      "enum": [
        "pending, paid, cancelled, failed"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "paypalOrderId": {
      "type": "string"
    },
    "shipping": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::shipping.shipping",
      "mappedBy": "order"
    },
    "paypal_payment": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::paypal-payment.paypal-payment",
      "inversedBy": "order"
    },
    "orderNumber": {
      "type": "string"
    },
    "subTotal": {
      "type": "decimal"
    },
    "trackingNumber": {
      "type": "string"
    },
    "shippingProvider": {
      "type": "string"
    },
    "estimatedDelivery": {
      "type": "date"
    },
    "paymentStatus": {
      "type": "string"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "authorId": {
      "type": "string"
    },
    "shippingStatus": {
      "type": "enumeration",
      "enum": [
        "to_ship",
        "shipped",
        "delivered",
        "returned",
        "confirmed"
      ],
      "default": "to_ship"
    }
  }
}
